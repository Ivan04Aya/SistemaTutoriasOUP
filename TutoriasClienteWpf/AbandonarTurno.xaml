<Window x:Class="TutoriasClienteWpf.AbandonarTurno"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TutoriasClienteWpf"
        mc:Ignorable="d"
        Title="CancelarTurno" Height="450" Width="800">
    <Grid>
        <Label Content="Abandonar turno" HorizontalAlignment="Left" Margin="63,44,0,0" VerticalAlignment="Top" FontSize="36" FontWeight="Bold"/>
        <Label Content="Escribe la razon de tu abandono:" HorizontalAlignment="Left" Margin="63,107,0,0" VerticalAlignment="Top" FontSize="20"/>
        <TextBox x:Name="tbRazon" HorizontalAlignment="Left" Margin="63,168,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="681" Height="173" FontSize="20"/>
        <Button Content="Cancelar" HorizontalAlignment="Left" Margin="86,377,0,0" VerticalAlignment="Top" Width="134" Height="31" Background="#FF7B7B" Click="BtnCancelarAbandono" FontSize="14"/>
        <Button Content="Abandonar" HorizontalAlignment="Left" Margin="586,377,0,0" VerticalAlignment="Top" Width="134" Height="31" Background="#75D846" Click="BtnAbandonar" FontSize="14"/>

    </Grid>
</Window>
